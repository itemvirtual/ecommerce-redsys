{
    "name": "itemvirtual/ecommerce-redsys",
    "description": "Redsys payments with Laravel",
    "keywords": [
        "itemvirtual",
        "ecommerce-redsys"
    ],
    "homepage": "https://github.com/itemvirtual/ecommerce-redsys",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Itemvirtual",
            "email": "projectes@itemvirtual.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "sermepa/sermepa": "^1.3"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Itemvirtual\\EcommerceRedsys\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itemvirtual\\EcommerceRedsys\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Itemvirtual\\EcommerceRedsys\\EcommerceRedsysServiceProvider"
            ]
        }
    }
}
